config MODULE_MODBUS
    bool "Modbus"

if MODULE_MODBUS

config MODULE_MODBUS_RTU
    bool "Modbus RTU"
    depends on HAS_PERIPH_GPIO
    depends on HAS_PERIPH_UART
    depends on TEST_KCONFIG
    select MODULE_PERIPH_GPIO
    select MODULE_PERIPH_UART
    select MODULE_CHECKSUM
    select MODULE_ZTIMER
    select MODULE_ZTIMER_MSEC

endif # MODULE_MODBUS

config HAVE_MODBUS
    bool
    help
        Indicates that support for Modbus is present

config HAVE_MHZ19_PWM
    bool
    help
        Indicates that a support for Modbus RTU is present
